{
  "name": "@paybutton/react",
  "version": "1.0.6",
  "description": "The easiest way to accept Bitcoin Cash online",
  "author": "poldridge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PayButton/paybutton.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle --jsx React.createElement --format modern,cjs",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix",
    "prettier": "prettier --write 'src/**/*.ts'",
    "start": "concurrently npm:watch npm:storybook",
    "storybook": "start-storybook -p 6006",
    "watch": "microbundle watch --jsx React.createElement --no-compress --format modern,cjs"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@popperjs/core": "^2.7.2",
    "@storybook/addon-a11y": "^6.1.18",
    "@storybook/addon-actions": "^6.1.18",
    "@storybook/addon-essentials": "^6.1.18",
    "@storybook/addon-links": "^6.1.18",
    "@storybook/node-logger": "^6.1.18",
    "@storybook/preset-create-react-app": "^3.1.6",
    "@storybook/react": "^6.1.18",
    "@types/lodash": "^4.14.157",
    "@types/node": "^12.12.38",
    "@types/qrcode.react": "^1.0.1",
    "@types/react": "^16.9.27",
    "@types/react-dom": "^16.9.7",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "microbundle": "^0.12.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "react-is": "^16.13.1",
    "react-scripts": "^3.4.3",
    "typescript": "^3.7.5"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@bitauth/libauth": "^1.18.0",
    "@material-ui/core": "^4.11.0",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "@material-ui/styles": "^4.10.0",
    "copy-to-clipboard": "^3.3.1",
    "lodash": "^4.17.20",
    "notistack": "^1.0.0",
    "qrcode.react": "^1.0.0",
    "react-jss": "^10.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
